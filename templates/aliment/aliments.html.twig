{% extends 'base.html.twig' %}

{% block title %}Les Aliments {% endblock %}

{% block monTitle %}
    Liste des Aliments
    {% if isCalorie %}
        avec moins de 50 calories
    {% elseif isGlucide %}
        avec moin de 5 glucides
    {% endif %}

{% endblock %}

{% block body %}


    <div class="container ">
        <div class="row">
            <div class="col-auto ">
                <a href="{{ path( 'aliments' ) }}" class="btn btn-primary"> Tous les aliments</a>
            </div>
            <div class="col-auto ">
                <a href="{{ path( 'alimentsParCalorie', {'calorie':50} ) }}" class="btn btn-primary"> Aliment avec moin
                    de 50 calories par 100g</a>
            </div>
            <div class="col-auto ">
                <a href="{{ path( 'alimentsParGlucides', {'glucide':5} ) }}" class="btn btn-primary"> Aliment avec moin
                    de 5 glucides par 100g</a>
            </div>
        </div>
        <hr>
        <div class="row">
            {% for aliment in aliments %}
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card border-primary mb-3 mx-auto " style="max-width:20rem ">
                        <div class="card-header text-center">
                            <img src="{{ asset('images/'~ aliment.image) }}" class="perso_imgAliment card_img-top">
                        </div>

                        <div card-body>
                            <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary"> {{ aliment.nom }}</h3>
                            <h4 class="text-center"> Prix (kg): {{ aliment.prix }}</h4>
                            <table class="table text-center">
                                <tr class="table-info">
                                    <td>Propriété</td>
                                    <td>Valeur (100g)</td>
                                </tr>
                                <tr class="table-primary">
                                    <td>Calories</td>
                                    <td>{{ aliment.calorie }}</td>
                                </tr>
                                <tr class="table-primary">
                                    <td>Glucides</td>
                                    <td>{{ aliment.glucide }}</td>
                                </tr>
                                <tr class="table-primary">
                                    <td>Lipides</td>
                                    <td>{{ aliment.lipide }}</td>
                                </tr>

                            </table>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
